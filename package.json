{
  "name": "tahfidz-expo",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",

    "build:web": "vite build",
    "copy:web": "rm -rf assets/web && mkdir -p assets/web && cp -r dist/* assets/web/",
