  "dependencies": {
    "expo": "~54.0.7",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.7",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-webview": "13.15.0"
  },
  "devDependencies": {
    "vite": "^5.0.0"
  },
  "private": true
}